<div id="showcase">
	<h2 class="page_heading">Featured Collections</h2>

    <div class="row">
    {% for i in (1..3) %}
        {% capture collection_iteration %}showcase_collection__{{ i }}{% endcapture %}
        {% capture collection_name %}{{ settings[collection_iteration] }}{% endcapture %}

        <div class="col-sm-4 showcase_item">
            {% if collections[collection_name].image and collections[collection_name].image != '' %}<img src="{{ collections[collection_name].image.src | collection_img_url: 'large' }}" alt="{{ collections[collection_name].image.alt | escape }}" />{% endif %}
            <div class="showcase_item__content">
                <h3><a href="{{ collections[collection_name].url }}">{{ collections[collection_name].title }}</a></h3>
                <a class="btn" href="{{ collections[collection_name].url }}">See all collection</a>
            </div>
        </div>
    {% endfor %}
    </div>
</div>